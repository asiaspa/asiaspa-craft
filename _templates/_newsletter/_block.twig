{# ----------------- query --------------- #}
{% set layout = layout ?? 'full' %}
{% set entry = craft.entries
    .section('newsletter')
    .with(['newsletterHeroImage'])
    .one() 
%}

{# ----------------- content --------------- #}
<section class="flex flex-col items-end max-w-screen-lg mx-auto sm:flex-row">
{% if layout == 'full' %}
    <div class="w-full pr-8 sm:w-5/12 sm:pr-0 ">
        <div class="transform sm:translate-x-8">
        {% include "_component/_imager" with {'image': entry.newsletterHeroImage[0] ?? null, w:1, h:1, 'mode':'fit'  } %}
        </div>
    </div>
    <div class="w-full pl-8 sm:w-7/12 sm:pl-0">
        <div class="transform -translate-y-48 p-edge sm:translate-y-0 bg-secondary-100 sm:-translate-x-8">
            {% include "_newsletter/_component/_form" with {'entry':entry}  %}
        </div>
    </div>

{% else %}
    <div class="w-full">
        {% include "_newsletter/_component/_form" with {'entry':entry} %}
    </div>
{% endif %}
</section>

