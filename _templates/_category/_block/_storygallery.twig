{% set entries = block.sourceStories %}
{% if entries | length %}

{% embed "_container/_container" %}
{% block content %}
<div class="mt-16">
    {% if block.heading is not empty %}
    <h3 class="inline-block py-2 mb-8 text-2xl border-b-2 font-display b-8 lg:text-3xl border-primary-500">
        {{ block.heading }}</h3>
    {% endif %}
    <div class="flex flex-col -mx-6 md:flex-row ">
        <div class="w-full px-6 pb-6 md:w-1/2">
            {% include "_story/_component/_story-card" with {
					'entry': entries[0],
					'layout': 'card sm:card md:card lg:card',
					'size': 'lg',
					'byline': false
				} %}
        </div>
        <div class="w-full md:w-1/2 md:divide-y md:divide-primary-300">
            <div class="flex flex-col md:flex-row ">
                <div class="w-full px-6 pb-6 md:w-1/2">
				    {% include "_story/_component/_story-card" with {
                        'entry': entries[1],
                        'layout': 'list sm:list md:card lg:card',
                        'size': 'md',
                        'byline': false
                    } %}
                </div>
                <div class="w-full px-6 pb-6 md:w-1/2">
			    	{% include "_story/_component/_story-card" with {
                        'entry': entries[2],
                        'layout': 'list sm:list md:card lg:card ',
                        'size': 'md',
                        'byline': false
                    } %}
                </div>
            </div>

            <div class="w-full p-6 pb-6">
				{% include "_story/_component/_story-card" with {
					'entry': entries[3],
                    'layout': 'list sm:list md:list lg:list ',
					'size': 'md',
					'byline': false
				} %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% endembed %}

{% endif %}