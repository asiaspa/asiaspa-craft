{% set listicleContent %}

<div class="flex flex-col items-start mt-32 space-y-4 md:flex-row md:space-y-0 md:space-x-6">
	<div class="w-full space-y-4 md:sticky top-8 md:w-1/3" >
		<h2 class="text-2xl font-hairline font-headline md:text-3xl lg:text-4xl ">
			{% if entry.storyListicleNumbering %}
			<span class="block text-primary-500">{{ listicleNumber }} / {{ listicleCount }}</span>
			{% endif %}
			{{ block.heading }}
		</h2>

		<div class="w-full font-serif prose prose-lg text-black ">
			{{ block.richTextEditor }}
		</div>
	</div>
	
	<div class="w-full md:w-2/3">
	{% block listicle %}{% endblock %}
	</div>
</div>

{% endset %}

{% embed "_containers/_container" %}
{% block content %}
	{{ listicleContent }}
{% endblock %}
{% endembed %}