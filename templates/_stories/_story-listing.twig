{% if entry | length %}
{% set storyContent %}
<div class="flex pt-2 pb-1 space--2">
    {% include "_components/_category-tag" with { category : entry.categorySingleCategory } %}
    {% include "_components/_category-tag" with { category : entry.categorySinglePrintIssue } %}
</div>
<a href="{{ entry.url }}">
    <h4 class="font-serif text-xl leading-tight sm:text-2xl lg:text-3xl hover:underline">{{ entry.title }}</h4>
    <hr class="block w-24 my-4 border-t-2 lg:my-6 border-primary-500" />
    <p class="text-gray-500 lg:text-xl text-md ">{{ entry.contentStandfirst }}</p>
    <p class="block mt-2 text-sm text-gray-700">{{ entry.postDate | date("M d, Y") }}, by {{ entry.author.fullName }}</p>
</a>
{% endset %}

{% if entry.lightswitch %}

<div class="flex flex-col md:space-x-6 md:flex-row">
    <div class="w-full md:w-8/12">
        <a href="{{ entry.url }}">
        {% include "_components/_imager" with { image : entry.assetUploadSingleImage[0] ?? '', w : 16, h : 9 } %}
        </a>
    </div>
    <div class="self-center w-full md:w-4/12">
        {{ storyContent }}
    </div>
</div>
{% else %}
<div class="flex space-x-6">
    <div class="w-5/12 md:w-4/12">
        <a href="{{ entry.url }}">
        {% include "_components/_imager" with { image : entry.assetUploadSingleImage[0] ?? '', w : 8, h : 9 } %}
        </a>
    </div>
    <div class="self-center w-7/12 md:w-8/12">
        {{ storyContent }}
    </div>
</div>
{% endif %}

{% endif %}