<section class="pt-16">
<div class="js-swiper-slider swiper-container px-screen-xl">
	<div class="swiper-wrapper">
		{% for slide in block.slide %}
			<a class="w-1/2 space-y-6 md:w-1/3 lg:w-1/4 swiper-slide" href="{{ slide.hyperlink }}" target="_blank">
                {% include "_components/_imager" with { 'image' : slide.heroImage[0] ?? "", h:9,w:8} %}
				<p>{{ slide.description }}</p>
            </a>
		{% endfor %}
	</div>
	{# <div class="swiper-button-prev"></div>
		<div class="swiper-button-next"></div> #}
	<div class="max-w-screen-lg mt-8">
		<div class="h-1 swiper-scrollbar"></div>
	</div>
</div>
</section>