
{% if block.story %}
<section class="mt-8 bg-secondary-100">
    <div class="max-w-screen-lg py-8 mx-auto px-edge">
        <h3 class="pb-2 text-xl font-hairline tracking-wide font-headline">{{ "Related Stories" |t }}</h3>
        <div class="flex flex-col space-y-2 md:flex-row md:space-x-4 md:space-y-0">
        {% for entry in block.story %}
            <div class="w-full md:w-1/3">
                {% include "_stories/_components/_story-card" with {
                    'entry': entry,
                    'layout': 'list sm:card md:list lg:list',
                    'size': 'sm',
                    'standfirst': false,
                    'byline': false
                } %}
            </div>
        {% endfor %}
        </div>  
    </div>
</section>
{% endif %}