
{% if block.story %}
{% embed "_containers/_container" with {'breakpoint':'xl'} %}
{% block content %}
    <div class="pt-16">
        <h3 class="pb-4 font-serif text-xl italic font-medium">Continue Reading: </h3>
        <div class="flex flex-col space-y-4 md:flex-row md:space-x-6 md:space-y-0">
        {% for entry in block.story %}
            <div class="w-full md:w-1/3">
                {% include "_stories/_components/_story-card" with {
                    'entry': entry,
                    'layout': 'list sm:list md:list lg:list',
                    'size': 'sm',
                    'standfirst': false,
                    'byline': false
                } %}
            </div>
        {% endfor %}
        </div>  
    </div>
{% endblock %}
{% endembed %}
{% endif %}