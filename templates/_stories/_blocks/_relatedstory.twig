
{% if block.story %}
{% embed "_containers/_container" with {'breakpoint':'lg'} %}
{% block content %}
    <div class="pt-2 pb-6 mt-8 border-t border-b border-primary-300">
        <h3 class="pb-2 font-serif text-xl italic font-medium">Continue Reading: </h3>
        <div class="flex flex-col space-y-2 md:flex-row md:space-x-4 md:space-y-0">
        {% for entry in block.story %}
            <div class="w-full md:w-1/3">
                {% include "_stories/_components/_story-card" with {
                    'entry': entry,
                    'layout': 'list sm:list md:list lg:list',
                    'size': 'sm',
                    'standfirst': false,
                    'byline': false
                } %}
            </div>
        {% endfor %}
        </div>  
    </div>
{% endblock %}
{% endembed %}
{% endif %}