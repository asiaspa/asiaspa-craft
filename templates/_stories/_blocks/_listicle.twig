{% set listicleContent %}
	{% block listicle %}{% endblock %}
{% endset %}


{% embed "_containers/_container" with {'breakpoint':'lg' } %}
{% block content %}
<div class="flex flex-col flex-wrap justify-end mt-8 space-y-4 md:flex-row">
	<div class="w-full border-t lg:w-10/12 border-primary-300">
		{% if entry.storyListicleNumbering %}
		<div class="inline-block mr-4">
			<span class="text-5xl font-hairline md:text-6xl text-primary-500 font-display ">{{ listicleNumber }}</span>
			<span class="font-sans text-base">/ {{ listicleCount }}</span>
		</div>
		{% endif %}
		<h2 class="inline-block text-3xl tracking-wide font-headline">{{ block.heading }}</h2>
	</div>
	<div class="w-full lg:w-10/12">
			{{ listicleContent }}
	</div>
	<div class="w-full md:w-10/12 lg:w-8/12 ">
		<div class="font-serif prose md:prose-lg">
        	{% include "_stories/_components/_rich-text-editor" with {'richTextEditor': block.richTextEditor} %}
		</div>
	</div>
</div>
{% endblock %}
{% endembed %}

