{% if slider %}
<div class="mb-16 js-swiper-listicle-simple-slider swiper-container">
	<div class="swiper-wrapper">
		{% for slide in slider %}
        <div class="swiper-slide">
            {% include "_components/_imager" with {'image': slide, 'zoom':true, 'caption': true} %}
        </div>
		{% endfor %}
	</div>
	<div class="text-right">
		<button class="swiper-prev">
			{% include "_components/_icon" with { 'icon':'icon-arrow-left','h':32,'w':32 } %}
		</button>
		<div class="relative inline mx-4 swiper-pagination"></div>
		<button class="swiper-next">
			{% include "_components/_icon" with { 'icon':'icon-arrow-right','h':32,'w':32 } %}
	</button>
	</div>
</div>
{% endif %}