{% minify %}
{# -------------------  query ------------------- #}
{% set tag = tag ?? '' %}
{% set offset = offset ?? 0 %}
{% set limit = limit ?? 5 %}

{% set tagObject = craft.tags 
    .group('user')
    .title(tag)
    .one()
%} 

{% set entriesQuery = craft.entries({
    relatedTo: tagObject,
    section : 'story',
    offset: offset,
    limit: limit,
    with: [
        'storyHeroImage',
        'storyCategory',
        'storyPrintIssue',
        'storyTag'
    ]
}) %}

{% set entries = entriesQuery.all() %}

{# -------------------  content  ------------------- #}
{% include "_stories/_story-pagination"  %}

{% endminify %}