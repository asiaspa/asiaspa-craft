{% if user %}

{% embed "_containers/_container" %}
{% block content %}

<div class="mt-32">
    <div class="flex items-center flex-1 w-full ">
        <div class="flex-none w-48 h-48 overflow-hidden rounded-full" >
            {% include "_components/_imager" with { image : user.userProfilePic[0] ?? '' , w : 1, h : 1 } %}
        </div>
        <div class="ml-6">
            <h2 class="text-2xl tracking-wide font-headline">{{ user.title }}</h2>
            <div class="font-serif prose md:prose-lg">{{ user.userBio }}</div>
        </div>
    </div>
</div>
{% endblock %}
{% endembed %}

{% endif %}