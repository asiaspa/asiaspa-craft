{% extends "_layouts/_generic" %}

{# -------------------  query ------------------- #}
{% do craft.app.elements.eagerLoadElements(className(entry), [entry], [ 
        'asiaspaAwardsHeroImage',
        'asiaspaAwardAsiaspaJudges.profilePic',
        'asiaspaAwardOtherJudges.profilePic',
]) %}


{# -------------------  Page ------------------- #}
{% block main %}
<section class="w-full pt-64 pb-16 bg-black" style="background: url('https://media.asiaspa.com/2018/12/UFO_8112.jpg'); background-size:cover; background-position:center center;">
    {% embed "_containers/_container" %}
    {% block content %}
    <div>
        <h1 class="py-6 text-6xl leading-none tracking-wide text-white border-b border-white font-display">AsiaSpa <br/>Awards <br/>2020</h1>
        <p class="pt-16 text-white">Start Nomiation <span>-></span></p>
    </div>
    {% endblock %}
    {% endembed %}


</section>
<section class="flex items-center w-full py-32 bg-primary-300">
    {% embed "_containers/_container" %}
    {% block content %}
     <div class="max-w-screen-md text-2xl tracking-wide md:text-3xl font-headline ">{{ entry.asiaspaAwardsIntroduction }}</div>
    {% endblock %}
    {% endembed %}

    {# <div class="font-serif text-3xl text-white md:text-4xl lg:text-5xl #}
</section>

<section>
    {% embed "_containers/_container" %}
    {% block content %}
    <div class="space-y-4 text-center">
        <h2 class="border-b border-white font-display ">The Judges</h2>
        <p class="font-serif">Introduction of the judges xxxx</p>
    </div>

    <div class="flex flex-row flex-no-wrap mt-16">
        {% for judge in entry.asiaspaAwardsAsiaspaJudges %}
        <div class="flex flex-col w-1/2 sm:w-1/3 md:w-1/4">
            <div class="flex items-center w-full">
                <div class="flex-none w-24 h-24 overflow-hidden rounded-full" >
                    {% include "_components/_imager" with { image : judge.profilePic[0] ?? '' , w : 1, h : 1 } %}
                </div>
                <div class="mt-6">
                    <h2 class="text-xl tracking-wide font-headline">{{ judge.judgesName }}</h2>
                    <h2 class="font-serif tracking-wide text-gray-500">{{ judge.judgesTitle }}</h2>
                    {# <div class="font-serif prose md:prose-sm">{{ user.userBio }}</div> #}
                </div>
            </div>
        </div>
        {% endfor %}
        </div>

        {% endblock %}
        {% endembed %}
</section>
{% endblock %}