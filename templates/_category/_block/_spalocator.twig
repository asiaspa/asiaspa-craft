{% set entry = block.entry[0] %}


{% if entry %}
<section class="max-w-screen-xl pt-16 mx-auto md:px-edge">
    <div class="flex flex-col md:flex-row md:items-end">       
        <div class="w-full md:w-4/12">
            <a class="block mr-16 bg-primary-300 md:mr-0 md:mt-0" href="{{ entry.url }}">
                <div class="opacity-75" style="filter: grayscale(100%) brightness(115%)">
                    <img class="lazyload " data-src="{{ entry.spaContactMap.img({ height: 900,width: 800}) }}">
                </div>
            </a>
        </div>
        <div class="w-full md:w-5/12">
            <a class="relative z-10 block ml-16 -mt-64 md:mt-0 md:-mx-32" href="{{ entry.url }}">
            {% include "_component/_imager" with {'image': entry.spaGallery[0] ?? null,w:3,h:2 } %}
            </a>
        </div>
        <div class="w-full md:w-4/12 ">
            <div class="relative z-10 flex flex-col items-start mr-16 -mt-16 space-y-4 md:-ml-32 p-edge bg-secondary-100 md:mr-0">
                <h3 class="text-3xl font-hairline md:text-4xl font-headline">{{ block.heading }}</h3>
                <p>{{ block.standfirst }}</p>
                <a href="{{ url('spa-locator') }}" class=" {{ include("_style/_button") }}">
                    <span>{{ block.callToActionButton|default('Spa Locator') }}</span>
                    {% include "_component/_icon" with {'icon': 'arrow-right-48'} %}
                </a>
            </div>
        </div>
    </div>
</section>
{% endif %}