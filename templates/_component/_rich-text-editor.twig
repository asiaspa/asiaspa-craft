{{ richTextEditor 
    | retconAutoAlt
    | retconSrcset(
        [
            {width: 160},
            {width: 320},
            {width: 480},
            {width: 640},
            {width: 800},
            {width: 960},
            {width: 1120},
            {width: 1280},
            {width: 1440},
            {width: 1600}
        ],
        'img',
        'auto',
        true
    )
    | retconRenameAttr('img', {
        srcset: 'data-srcset',
        sizes: 'data-sizes'
    }) 
    | retconAttr('img', {
        class: 'w-full lazyload'
    }) 
    | retconAttr('a', {
        class: 'text-bg'
    })
    | retconAttr('iframe', {
        class: 'w-full',
        'style': false,
        'width': false,
        'height': false
    })
}}
