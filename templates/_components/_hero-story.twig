<section class="lg:mb-16"> 
    <div class="relative w-full h-auto my-4 lg:my-8">
        {# ------------------- backdrop ------------------- #}
        <div class="absolute top-0 left-0 w-full mt-16 lg:h-full h-60 lg:w-9/12 bg-primary-300"></div>

        {# ------------------- Story ------------------- #}
        <div class="relative flex flex-wrap justify-center max-w-screen-xl mx-auto">

            <div class="w-full px-4 lg:px-0 lg:w-6/12">
                {% if entry.storyHeroImage | length %}
                    {% include "_components/_imager" with { img : entry.storyHeroImage[0], w : 8, h : 9 } %}
                {% else %}
                    <figure class="relative w-full overflow-hidden bg-gray-100" style="padding-bottom: {{ 9/8*100 }}%">
                        <div class="absolute w-full h-full pin object-fit-cover" />
                    </figure>
                {% endif %}
            </div>

            <div class="self-center w-full px-4 py-2 lg:pl-16 lg:py-8 lg:w-6/12">
                {# ------------------- category -------------------#}
                {% if entry.storyCategory | length %}
                <a class="py-1 font-medium border-black hover:border-b-2" href="{{ entry.storyCategory.one().url }}">{{ entry.storyCategory.one().title}}</a>
                {% endif %}
                <h1 class="font-serif text-3xl font-medium leading-tight tracking-tight md:text-4xl lg:text-5xl">{{ entry.title }}</h1>
                <hr class="block w-32 my-6 border-t-2 border-primary-500" />
                <h2 class="text-xl lg:text-2xl color-gray-900">{{ entry.storyStandfirst }}</h2>
                {# avator #}
                {% include "_components/_user" with { user : entry.author, date : entry.postDate } %}
            </div>
        </div> 
    </div>
</section>
