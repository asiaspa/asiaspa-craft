{% set footerNodeQuery = craft.navigation.nodes()
    .handle('footer')
    .level(1)
%}
{% set footerNodes = footerNodeQuery.all() %}

<section class="py-16 bg-primary-300">
        {% embed "_containers/_container" with {'breakpoint':'lg'} %}
        {% block content %}
        <div class="flex justify-end my-8 lg:space-x-16 flex-dir-col lg:flex-dir-row aligm-middle">
            <div class="w-full lg:w-1/2">
                <span class="font-serif text-3xl font-semibold leading-tight lg:text-4xl">{{ "Sign up to get the latest spa and lifestyle news delivered to your inbox"|t }}</span>
            </div>
            <div class="w-full lg:w-1/2">
                <form class="w-full max-w-sm">
                    <div class="flex items-center py-2 border-b border-black">
                        <input class="w-full px-2 py-1 mr-3 text-lg leading-tight bg-transparent border-b border-black border-none appearance-none focus:outline-none"
                               type="text"
                               placeholder="Jane Doe"
                               aria-label="Full name">
                        <button class="flex-shrink-0 px-2 py-1 text-lg text-black"
                                type="button">
                            Sign Up
                        </button>
                    </div>
                </form>
            </div>
        </div>
        {% endblock %}
        {% endembed %}
        
        {% embed "_containers/_container" with {'breakpoint':'lg'} %}
        {% block content %}
        <div class="flex space-x-6 flex-dir-col lg:flex-dir-row">
            <div class="w-full lg:w-1/2">
                <span class="text-md">{{ "Â© 2020 Copyright by Two 2 Press"|t }} </span>
            </div>
            <div class="w-full text-right lg:w-1/2">
                {% for node in footerNodes %}
                <a class="text-md"
                    href="{{ node.url }}">{{ node.title }}</a>
                {% endfor %}
                <a class="text-md"
                    href="#">Placeholder</a>
            </div>
        </div>
        {% endblock %}
        {% endembed %}
</section>