        <div class="flex flex-row items-center justify-end h-20 max-w-screen-xl mx-auto text-white px-edge ">
            <a class="text-white" href="#">Close</a>
            </div>
        </div>
    </div>

   <section class="max-w-screen-md pt-32 mx-auto px-edge"> 
        <h1 class="mb-8 text-6xl font-hairline leading-none text-white font-display">
            <span class="block">Enter</span>
            <span class="block">The</span>
            <span class="block">Awards</span>
        </h1>
        <div class="font-serif text-base font-light text-white md:text-lg">
            {{ entry.asiaspaAwardsIntroEnter}}
