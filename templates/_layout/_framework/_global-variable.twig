{# -------------------  Prefetch  ------------------- #}
{% spaceless %}
{% set prefetchUrls = [ 
    alias("@assetsUrl"), 
    alias("@imgixDefaultUrl"),
    alias("@imgixExternalUrl")
] %}
{% set baseUrl = alias('@assetsUrl') ~ '/' %}
{% endspaceless %}

{# -------------------  Global variable  ------------------- #}
{% set website = craft.globalSets()
    .handle('website')
    .with([
        'websiteLogo',
        'websiteLogoSimple'
    ]).one() %}


{# -------------  Tailwindcss Small Component Class  ---------------- #}
{% set globalStyle = {
    'button': 'flex items-center text-black tracking-wide justify-between border-b h-12 space-x-4 hover:border-primary-500 hover:text-primary-500 transition duration-300'
} %}


{# -------------  Tailwindcss CSS varible ---------------- #}
<style>
:root {
    --font-sans: "ivystyle-sans", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue","Arial", "Noto Sans", "sans-serif", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    --font-sans-display: "ivymode", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue","Arial", "Noto Sans", "sans-serif", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    --font-serif: "ivypresto-text", "Georgia, Cambria", "Times New Roman", "Times", "serif";;
    --font-headline: "ivypresto-headline", "Georgia, Cambria", "Times New Roman", "Times", "serif";
    --font-display: "ivypresto-display", "Georgia, Cambria", "Times New Roman", "Times", "serif";
    --color-black: {{ website.websiteColorBlack }};
    --color-white: {{ website.websiteColorWhite }};

    --color-primary-100: {{ website.websiteColorPrimary100 }};
    --color-primary-300: {{ website.websiteColorPrimary300 }};
    --color-primary-500: {{ website.websiteColorPrimary500 }};
    --color-primary-700: {{ website.websiteColorPrimary700 }};
    --color-secondary-100: {{ website.websiteColorSecondary100 }};

    --color-gray-100: {{ website.websiteColorGray100 }};
    --color-gray-300: {{ website.websiteColorGray300 }};
    --color-gray-500: {{ website.websiteColorGray500 }};
    --color-gray-700: {{ website.websiteColorGray700 }};
}
</style>

{% block html %}{% endblock %}