{% set headerNodes = craft.navigate.raw('header') %}
 
<header class="sticky top-0 z-20 w-full py-4 transition-all duration-300 border-gray-100 bg-secondary-100"
        x-data="{ top: true }"
        x-on:scroll.window="top = (window.pageYOffset > 1) ? false : true;"
        :class="{'py-4': top === true }">
    <div class="relative flex items-center justify-between h-12 max-w-screen-xl mx-auto px-edge">
        <a class="flex items-center" class="block h-12 mr-6" href="{{ siteUrl }}">
            {% if website.websiteLogo| length  and craft.app.request.url != '/' %}
                <img class="block w-auto h-12 py-1" 
                :class="{'hidden': top === false}"
                src="{{ rev(website.websiteLogo[0].url()) }}" 
                    />
            {% endif %}
            {% if website.websiteLogoSimple | length %}
                <img class="hidden block w-auto h-12 "
                :class="{'hidden': top === true }"
                 src="{{ rev(website.websiteLogoSimple[0].url()) }}"  />
            {% endif %}
        </a>
        <div class="absolute items-center hidden space-x-6 transform -translate-x-1/2 left-1/2 lg:flex">
            {% for node in headerNodes %}
                <a class="text-lg tracking-wide transition duration-300 font-sans-display hover:text-primary-500"
                    href="{{ node.url }}">{{ node.name }}</a>
            {% endfor %}
        </div>
        <div class="flex flex-row space-x-6">
            {# <a href="#spa" class="text-lg tracking-wide transition duration-300 font-sans-display hover:text-primary-500">
                <span>Spa Locator</span>
            </a> #}
            <a href="#nav">
                <span class="hidden md:inline-block">
                {% include "_component/_icon" with { 'icon':'icon-zoom'} %} 
                </span>
                <span class="md:hidden">
                {% include "_component/_icon" with { 'icon':'icon-menu-search'} %} 
                </span>
            </a>

        </div>
    </div>
</header>
 

