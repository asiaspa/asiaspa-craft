<div class="mt-16 space-y-4">   
    <h2 class="text-4xl font-hairline tracking-wide font-headline">Signature Treatment</h2>
    {% include "_component/_hr" %}
    {% for block in entry.spaService %}
    <div class="flex space-x-6">
        {% if block.image | length %}
        <div class="w-1/3">
            {% include "_component/_imager" with {'image': block.image[0] ?? null, 'zoom': true } %}
        </div>
        {% endif %}
        <div class="w-full space-y-2">
            <h3 class="text-2xl font-hairline tracking-wide font-headline">{{ block.heading }}</h3>
            <p class="text-sm">{{ block.description}}</p>
            <p class="text-sm underline text-primary-700">{{ block.priceDuration }}</p>
        </div>
    </div>
    {% endfor %}
</div>