{% set entries = block.pinnedStories %}
{% if entries | length %}

{% embed "_containers/_container" %}
{% block content %}
    <div class="mt-16">
        {% if block.heading is not empty %}
            <h3 class="inline-block py-2 mb-8 font-serif text-2xl border-b-2 b-8 lg:text-3xl border-primary-500">{{ block.heading }}</h3>
        {% endif %}
        <div class="flex flex-col -mx-6 md:flex-row md:divide-x md:divide-primary-300">
            <div class="w-full px-6 pb-6 md:w-1/2">
                {% include "_stories/_story-card" with { 'entry': entries[0]} %}
            </div>
            <div class="w-full md:w-1/2 md:divide-y md:divide-primary-300">
                <div class="flex flex-row md:divide-x md:divide-primary-300">
                    <div class="w-1/2 px-6 pb-6">
                        {% include "_stories/_story-card" with { 'entry': entries[1]} %}
                    </div>
                    <div class="w-1/2 px-6 pb-6">
                        {% include "_stories/_story-card" with { 'entry': entries[2]} %}
                    </div>
                </div>

                <div class="w-full p-6 pb-6">
                    {% include "_stories/_story-listing" with { 'entry': entries[3]} %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% endembed %}

{% endif %}