{#  Variable Semantics
    * assetUploadSingleImage    = Hero Image
    * categorySingleCategory    = entry's category
    * categorySinglePrintIssue  = entry's print issue
    * contentStandfirst         = entry's standfirst
    * userSingleUser            = entry's byline
 #}

{% set story = block.entrySingleStory[0] %}
{% if story|length %}
<section class="bg-primary-300">
    {% embed "_containers/_container" with {'breakpoint':'lg', 'class':'bg-primary-300'} %}
    {% block content %}
        <div class="flex flex-col -mx-edge lg:mx-0 lg:py-16 lg: lg:space-x-12 lg:flex-row"> 
            <div class="w-full lg:p-0 lg:w-7/12">
                <div >
                {% include "_components/_imager" with { image : story.assetUploadSingleImage[0] ?? '', w:4, h:3} %}
                </div>
            </div>
            <div class="self-center w-full px-6 pt-6 pb-12 lg:p-0 lg:w-5/12">
                <div class="flex space-x-6">
                    {% include "_components/_category-tag" with { category : story.categorySingleCategory } %}
                    {% include "_components/_category-tag" with { category : story.categorySinglePrintIssue } %}
                </div>
                <h1 class="font-serif text-3xl font-medium leading-tight tracking-tight lg:text-4xl xl:text-5xl ">{{ block.entrySingleStory[0].title }}</h1>
                <hr class="block w-32 my-6 border-t-2 border-primary-500" />
                <h2 class="mb-4 text-lg lg:text-xl color-gray-900">{{ story.contentStandfirst }}</h2>
                {% include "_components/_user" with { user : story.userSingleUser[0] ?? story.author, date : story.postDate } %}
            </div>
        </div>
    {% endblock %}
    {% endembed %}
</section>
{% endif %}